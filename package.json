{
    "name": "npm-update-check-action",
    "version": "1.0.0",
    "description": "npm package update checker for GitHub actions",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^28.1.0",
        "@types/node": "^17.0.39",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.0",
        "jest-circus": "^28.1.0",
        "prettier": "^2.6.2",
        "ts-jest": "^28.0.4",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@actions/exec": "^1.1.1",
        "@actions/io": "^1.1.2"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
