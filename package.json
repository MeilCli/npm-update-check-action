{
    "name": "npm-update-check-action",
    "version": "1.0.0",
    "description": "npm package update checker for GitHub actions",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "@vercel/ncc": "^0.28.5",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "prettier": "^2.3.0",
        "ts-jest": "^26.5.6",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "@actions/core": "^1.2.7",
        "@actions/exec": "^1.0.4",
        "@actions/io": "^1.1.0"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
